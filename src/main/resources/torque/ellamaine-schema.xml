<!DOCTYPE database SYSTEM "http://db.apache.org/torque/dtd/database_3_3.dtd">

<!-- A database schema file for Torque.  This describes the tables required to READ from Ellamaine

 Tables not shown here include:
    ConfigTable
    CrawlerWarning
    SessionProgressTable
    SessionURLStack
    StratusTable
-->
<database name="ellamaine" defaultIdMethod="none">

<table name="AdvertisementCache" description="Contains reference data about every advertisement downloaded by the Crawler">
    <column name="ID" required="true" primaryKey="true" type="INTEGER" autoIncrement="true"/>
    <column name="DateEntered" required="true" type="TIMESTAMP"/>
    <column name="LastEncountered" required="false" type="TIMESTAMP"/>
    <column name="SaleOrRentalFlag" type="INTEGER"/>
    <column name="SourceName" type="LONGVARCHAR"/>
    <column name="SourceID" type="VARCHAR" size="20"/>
    <column name="TitleString" type="LONGVARCHAR"/>
    <column name="RepositoryID" type="INTEGER"/>
</table>
        
<table name="AdvertisementRepository" description="Contains reference data about entries in the repository of Advertisements">
    <column name="ID" required="true" primaryKey="true" type="INTEGER" autoIncrement="true"/>
    <column name="DateEntered" required="true" type="TIMESTAMP"/>
    <column name="SourceURL" type="LONGVARCHAR"/>
</table>

</database>
